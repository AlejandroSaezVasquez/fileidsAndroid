<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentPropiedades">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btbus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#8BC34A"
                    android:src="@android:drawable/ic_search_category_default"
                    android:layout_marginTop="1dp"/>

                <ImageButton
                    android:id="@+id/btLimpiar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="#F44336"
                    android:src="@android:drawable/ic_delete" />

                <EditText
                    android:id="@+id/txtBusquedaPropiedades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Digite Palabra clave"
                    android:textColor="#Ffffff"
                    android:padding="14dp"
                    android:textColorHint="@color/text_shadow_white"
                    android:background="@drawable/input_shape"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:layout_marginTop="1dp"/>
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TableRow>
                    <TextView
                        android:id="@+id/txTitleID"
                        android:layout_width="60dp"
                        android:background="#0C0C0C"
                        android:text="ID"
                        android:textColor="@color/text_shadow_white"
                        android:textStyle="bold"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/tx"
                        android:layout_width="20dp"
                        android:background="#0C0C0C"
                        android:text="DESCRIPTORES"
                        android:textColor="@color/text_shadow_white"
                        android:textStyle="bold"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="200dp"
                        android:background="#0C0C0C"
                        android:text="PROYECTO"
                        android:textColor="@color/text_shadow_white"
                        android:textStyle="bold"
                        android:padding="3dip" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:gravity="right"
                        android:padding="3dip" />
                    <TextView
                        android:gravity="right"
                        android:padding="3dip" />
                    <TextView
                        android:gravity="right"
                        android:padding="3dip" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>